<!DOCTYPE html>
<html lang="en" id="scrollThis">

<head>
    @using Microsoft.AspNetCore.Identity
    @inject SignInManager<IdentityUser> SignInManager
    @inject UserManager<IdentityUser> UserManager
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Portfolio</title>

    <!-- Bootstrap core CSS -->
    <link href="~/css/vendor/bootstrap/css/bootstrap.min.css?" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

    <!-- Custom fonts for this template -->
    <link href="~/css/vendor/fontawesome-free/css/all.min.css?" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/css/grayscale.css?ver=6" rel="stylesheet">

    <!-- Scripts that need to be preloaded -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="~/js/particles.js" defer="defer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.0.2/plugins/CSSPlugin.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.0.2/easing/EasePack.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.0.2/TweenLite.min.js"></script>
    <script src="~/js/site.js?ver=3"></script>

</head>

<body id="page-top">
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" asp-controller="Home" asp-action="Index" style="color: black">Home</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item" style="margin-top: 10px; margin-right: 50px; padding:20px">
                            <a class="navbar-btn js-scroll-trigger" asp-controller="Home" asp-action="About" style="color: black">About me</a>
                        </li>
                        <li class="nav-item" style="margin-top: 10px; margin-right: 50px; padding:20px">
                            <a class="navbar-btn js-scroll-trigger" asp-controller="Home" asp-action="Projects" style="color: black">Projects</a>
                        </li>
                        <li class="nav-item" style="margin-top: 10px; margin-right: 50px; padding:20px">
                            <a class="navbar-btn js-scroll-trigger" asp-controller="Home" asp-action="BrickBreak" style="color: black">Brick Break</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item" style="margin-top: 10px; margin-right: 50px; padding:20px">
                                <a class="navbar-btn js-scroll-trigger" asp-area="Identity" asp-page="/Account/Manage/Index" style="color: black">Control Panel</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Header -->
        <header class="masthead" id="particles-js">
            <div>

            </div>
        </header>

        <!-- About Section -->
        <section class="about-section text-center"></section>

        <!-- Projects Section -->
        <section class="">
            <div class="container">
                <p>@RenderBody()</p>
            </div>
        </section>

        <!-- Signup Section -->
        <section class="signup-section"></section>

        <!-- Contact Section -->
        <section class="contact-section bg-black">
            <div class="container">

                <div class="row">

                    <div class="col-md-4 mb-3 mb-md-0" style=" visibility: hidden">
                        @*<div class="card py-4 h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-map-marked-alt text-primary mb-2"></i>
                                    <h4 class="text-uppercase m-0">Address</h4>
                                    <hr class="my-4">
                                    <div class="small text-black-50">4923 Market Street, Orlando FL</div>
                                </div>
                            </div>*@
                    </div>

                    <div class="col-md-4 mb-3 mb-md-0" data-aos="fade-up" data-aos-duration="500">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <a href="mailto:lpetkov44@yahoo.com">
                                    <i class="fas fa-envelope text-primary mb-2"></i>
                                    <h4 class="text-uppercase m-0">Email</h4>
                                    <hr class="my-4">
                                    <div class="small text-black-50">
                                        <p>
                                            lpetkov44@yahoo.com
                                        </p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="social d-flex justify-content-center" data-aos="fade-up" data-aos-duration="500">
                    <a href="https://www.facebook.com/shitsgalore" target="_blank" class="mx-2">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="https://github.com/lyubomirp?tab=repositories" target="_blank" class="mx-2" data-aos="fade-up" data-aos-duration="500">
                        <i class="fab fa-github"></i>
                    </a>
                </div>

            </div>
        </section>
        <!-- Footer -->
        <footer class="bg-black small text-center text-white-50">
            <div class="container">
            </div>
        </footer>
    <!-- Bootstrap core JavaScript -->
    <script src="~/css/vendor/jquery/jquery.js"></script>
    <script src="~/css/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/css/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="~/css/js/grayscale.min.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    @RenderSection("Scripts", required: false)
</body>

</html>
